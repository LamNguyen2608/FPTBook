@model Author

@{
    ViewData["Title"] = "Delete author";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Confirmation for @Model.Fullname</h1>
        </p>
        <img class="rounded-circle" src="" id="ProfilePicturePreview" style="width: 200px; height: 200px; object-fit: cover; display: block; margin-left: auto; margin-right: auto;" />
            <div class="col-md-8 offset-2">
                <div class="form-group">
                    <label asp-for="ProfilePicURL" class="control-label"></label>
                    <input asp-for="ProfilePicURL" class="form-control" readonly />
                    <span asp-validation-for="ProfilePicURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fullname" class="control-label"></label>
                    <input asp-for="Fullname" class="form-control" readonly />
                    <span asp-validation-for="Fullname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" readonly />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ProfilePicturePreview");
            output.src = $("#ProfilePicURL").val();
        })
    </script>
}